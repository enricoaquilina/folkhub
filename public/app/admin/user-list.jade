.container
  .panel.panel-primary
    .panel-heading.text-center Folks in da hub!
  table.table.table-condensed.table-hover.table-striped
    tr
      td
        label Username
      td
        label Email
      td
        label First name
      td
        label Last name
      td
      td
    tr(ng-repeat="user in users")
      td {{ user.username }}
      td {{ user.email }}
      td {{ user.firstname }}
      td {{ user.lastname }}
      td
        a.btn.btn-default(href="/{{user.username}}/update-user") Update
      td
        a.btn.btn-danger(href="/{{user.username}}/delete-user") Delete
