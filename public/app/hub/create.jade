.container
  .well
    form.form-horizontal(ng-show="identity.isAuthenticated()" name="hubcreateForm")
      fieldset Create a hub
      table.table
        tr
          td
            label Hub Name
          td
            .form-group
              input.form-control(placeholder="What's your hub's name?", type="text" ng-model="hubname")
        tr
          td
            label Description
          td
            .form-group
              input.form-control(placeholder="Describe your hub", type="text" ng-model="hubdescription")
        tr
          td
            label Picture
          td
            .form-group
              input.form-control(placeholder="Password", data-icon="false" type="file" ng-model="hubpicture")        
        tr
          td
            label Keywords
          td
            .form-group
              input.form-control(placeholder="Enter tags to help in finding your hub (Optional)", type="text" ng-model="hubpicture")        
      button.btn.btn-primary(ng-click="createHub()" ng-disabled="hubcreateForm.$invalid") Build your hub!
      | &nbsp;
      a.btn.btn-default(href="/") Cancel
