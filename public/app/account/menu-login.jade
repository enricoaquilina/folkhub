.navbar-right(ng-controller="mvMenuLoginCtrl as login")
  form.navbar-form(ng-hide="identity.isAuthenticated()")
    .form-group
      input.form-control(placeholder="Email", ng-model="email")
    .form-group
      input.form-control(placeholder="Password", ng-model="password")
    button.btn.btn-primary(ng-click="authenticate(email, password)") Sign in
  ul.nav.navbar-nav.navbar-right(ng-show="identity.isAuthenticated()")
    li.dropdown
      a.dropdown-toggle(href="", data-toggle="dropdown")
      |{{identity.currentUser.firstName + ' ' + identity.currentUser.lastName}}
      b.caret
    ul.dropdown-menu
      li 
        a(href="", ng-click="signOut()") Sign out
