.container
  .well
    form.form-horizontal(ng-hide="identity.isAuthenticated()" name="signupForm")
      fieldset Sign up with FolkHub
      table.table
        tr
          td
            label Username
          td
            .form-group
              input.form-control(placeholder="Username", type="text" ng-model="username")
        tr
          td
            label Email
          td
            .form-group
              input.form-control(placeholder="Email", type="text" ng-model="email")
        tr
          td
            label Password
          td
            .form-group
              input.form-control(placeholder="Password", type="password" ng-model="password")        
      button.btn.btn-primary(ng-click="signUp()" ng-disabled="signupForm.$invalid") Sign up
      | &nbsp;
      a.btn.btn-default(href="/") Cancel
