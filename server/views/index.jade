extends ../includes/layout

block main-content
  .navbar.navbar-inverse.navbar-fixed-top
    .container
      .navbar-header
        a.navbar-brand(href="/") FolkHub
          h6 A hub where folks hang out
      .navbar-collapse.collapse(ng-controller="mvAccountCtrl as login")
        ul.nav.navbar-nav
          li
            a(href="/hubs/{{identity.currentuser.username}}") My Hubs 
          li(ng-show="identity.currentuser.isAdmin()")
            a(href="/admin/hubs" ) Discover
          li(ng-show="identity.currentuser.isAuthenticated()")
            a(href="/create") Create Hub
        div(ng-include="'/partials/account/menu-login'")
  section.content
    div(ng-view)
  
  footer.container.text-center
    p &copy; 2016 FolkHub 
